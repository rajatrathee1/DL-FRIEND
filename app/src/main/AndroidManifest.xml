<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.drivinglicenseinfo">

    <!-- Required Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Required for API 31+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"
        tools:targetApi="33" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrivingLicenseInfo"
        tools:targetApi="31">
        <activity
            android:name=".AnswersActivity"
            android:exported="false" />
        <activity
            android:name=".PermanentLicenseActivity"
            android:exported="false" />
        <activity
            android:name=".LearningLicenseActivity"
            android:exported="false" />
        <activity
            android:name=".LicenseProcedureActivity"
            android:exported="false" />
        <activity
            android:name=".RequiredDocumentsActivity"
            android:exported="false" />
        <activity
            android:name=".DrivingLawsActivity"
            android:exported="false" />
        <activity
            android:name=".PracticeTestActivity"
            android:exported="false" />
        <activity
            android:name=".ExamPreparationActivity"
            android:exported="false" />
        <activity
            android:name=".ExamInformationActivity"
            android:exported="false" />
        <activity
            android:name=".VehicleInsuranceActivity"
            android:exported="false" />
        <activity
            android:name=".ChallanInformationActivity"
            android:exported="false" />
        <activity
            android:name=".RCBookDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".VehicleInformationActivity"
            android:exported="false" />
        <activity
            android:name=".LicenseDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".QuizActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
