<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Driving License Details Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_driving_license_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            android:elevation="6dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/green">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/header_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_driving_license"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driving License Details"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Driving License is one stop for all states RTO and allows to apply, check, renewal of Driving license."
                    android:textColor="@android:color/white"
                    android:layout_below="@id/header_title"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Grid Section -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Vehicle Information -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_vehicle_information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                android:elevation="6dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/orange">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/icon_vehicle_info"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_vehicle_info"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Information"
                        android:textSize="16sp"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_below="@id/icon_vehicle_info"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- RC Book Details -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_rc_book_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                android:elevation="6dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/blue">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/icon_rc_book"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_rc_book"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RC Book Details"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_below="@id/icon_rc_book"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Challan Information -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_challan_information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="16dp"
                android:elevation="6dp"
                android:backgroundTint="@color/purple">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/icon_challan_info"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_challan_info"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Challan Information"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_below="@id/icon_challan_info"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Vehicle Insurance -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_vehicle_insurance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="16dp"
                android:elevation="6dp"
                android:backgroundTint="@color/pink">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/icon_vehicle_insurance"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_vehicle_insurance"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Insurance"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_below="@id/icon_vehicle_insurance"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- RTO Exam Tasks Section -->
        <!-- RTO Exam Tasks Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="RTO Exam Tasks :"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/view_all_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:paddingEnd="8dp"
                android:text="View All"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Question Bank -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_question_bank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="16dp"
                android:elevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/icon_question_bank"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_question_bank"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Question Bank"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_below="@id/icon_question_bank"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Practice Test -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_practice_test"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardCornerRadius="16dp"
                android:elevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/icon_practice_test"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_practice_test"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Practice Test"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_below="@id/icon_practice_test"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <!-- Second Row of Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!--Full Exam -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_full_Exam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                android:elevation="6dp"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_exam"
                        android:id="@+id/icon_exam"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Exam"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_below="@id/icon_exam"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Driving Laws -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_driving_laws"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                android:elevation="6dp"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_driving_laws"
                        android:id="@+id/icon_driving_laws"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Driving Laws"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_below="@id/icon_driving_laws"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <!-- Text Label for Topic-wise Quizzes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic-wise Exams"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- RecyclerView for Quiz List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

    </LinearLayout>


</ScrollView>
